{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HackerAI",
  "version": "0.1.0",
  "identifier": "co.hackerai.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "node scripts/build.js",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "HackerAI",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "userAgent": "HackerAI-Desktop/1.0",
        "theme": "Dark",
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:* https://hackerai.co https://*.hackerai.co https://*.convex.cloud https://*.convex.dev https://auth.hackerai.co https://api.workos.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:* https://hackerai.co https://*.hackerai.co https://*.convex.cloud; style-src 'self' 'unsafe-inline' http://localhost:* https://hackerai.co https://*.hackerai.co; img-src 'self' data: https: http: blob:; font-src 'self' data: https: http:; connect-src 'self' http://localhost:* ws://localhost:* https://hackerai.co https://*.hackerai.co https://*.convex.cloud wss://*.convex.cloud https://auth.hackerai.co https://api.workos.com https://*.posthog.com https://*.stripe.com; frame-src 'self' https://*.stripe.com; media-src 'self' blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": "v1Compatible",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright 2024 HackerAI",
    "category": "DeveloperTool",
    "shortDescription": "AI-powered penetration testing assistant",
    "longDescription": "HackerAI is an AI-powered penetration testing assistant that helps security professionals identify vulnerabilities.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/hackerai-tech/hackerai/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRBMzM3QTAyMDVDQzlBMUYKUldRZm1zd0ZBbm96U3VVSmRRMjYzNnNRSTJNNFdOaUl4cGR3bGxRZGpxTU02VjZUdGh2K0RnKy8K"
    },
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["hackerai"]
      }
    }
  }
}
